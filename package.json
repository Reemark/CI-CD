{
  "name": "express-crud-todo",
  "version": "1.0.0",
  "description": "a todo api",
  "main": "app.js",
  "scripts": {
    "lint": "eslint .",
    "start": "node app.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:perf": "node scripts/perf-check.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!eslint.config.cjs",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/scripts/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70,
        "statements": 70,
        "functions": 70,
        "branches": 60
      }
    }
  },
  "devDependencies": {
    "autocannon": "^8.0.0",
    "eslint": "^10.0.2",
    "globals": "^15.15.0",
    "jest": "^29.0.0",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "sql.js": "^1.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "overrides": {
    "validator": ">=13.15.22"
  }
}
