{
  "name": "express-crud-todo",
  "version": "1.0.0",
  "description": "a todo api",
  "main": "app.js",
  "scripts": {
    "lint": "eslint .",
    "start": "node app.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!eslint.config.cjs",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70,
        "statements": 70,
        "functions": 70,
        "branches": 60
      }
    }
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "sql.js": "^1.6.0",
    "lodash": "4.17.20",
    "moment": "2.29.1"
  }
}
